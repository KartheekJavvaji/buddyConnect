<Application
    x:Class="buddyConnect.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:buddyConnect"
    xmlns:vm="using:buddyConnect.View_Models"
    RequestedTheme="Light">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="tb1">
            <Setter Property="Foreground" Value="Goldenrod"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontFamily" Value="Tw Cen MT"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="tbHam">
            <Setter Property="Foreground" Value="{StaticResource SystemControlBackgroundAccentBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe WP SemiLight"/>
        </Style>

            <vm:BaseViewModelLocator x:Key="ViewModelLocator"/>

    </Application.Resources>

</Application>
